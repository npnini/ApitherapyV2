rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isCaretaker() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'caretaker';
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /acupuncture_points/{pointId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    match /protocols/{protocolId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /measures/{measureId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }

    match /problems/{problemId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }

    match /questionnaires/{questionnaireId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /patients/{patientId} {
      allow read: if isAuthenticated();
      allow write: if isCaretaker() || isAdmin();

      match /medical_records/{recordId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if (isCaretaker() || isAdmin());

        match /treatments/{treatmentId} {
          allow read: if isAuthenticated();
          allow create, update, delete: if isCaretaker() || isAdmin();
        }

        match /questionnaire_responses/{responseId} {
          allow read: if isAuthenticated();
          allow create, update, delete: if isCaretaker() || isAdmin();
        }
      }
    }

    match /app_config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
